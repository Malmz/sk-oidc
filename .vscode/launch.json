	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch dev server",
			"request": "launch",
			"runtimeArgs": ["run", "dev"],
			"runtimeExecutable": "pnpm",
			"skipFiles": ["<node_internals>/**"],
			"type": "node"
		},
		{
			"type": "msedge",
			"request": "launch",
			"name": "Launch Edge against localhost",
			"url": "http://localhost:5173",
			"webRoot": "${workspaceFolder}"
		}
	]
}
